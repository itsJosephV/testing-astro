---
import Layout from "../layouts/Layout.astro";
import AppleScrollArea from "../components/AppleScrollArea.astro";
import Pinkers from "../components/Pinkers.astro";

const response = await fetch("https://jsonplaceholder.typicode.com/posts");
const data = await response.json();
---

<Layout>
	<main class="mb-20 overflow-hidden">
		<section class="h-[60vh]">
			<div class="relative h-full w-full">
				<img
					src="https://images.unsplash.com/photo-1557409518-691ebcd96038?q=80&w=3270&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
					class="h-full w-full object-cover"
					alt=""
				/>
				<div class="absolute inset-0 flex items-center justify-start px-5">
					<h1
						class="mx-auto max-w-[1400px] text-center text-5xl font-bold text-balance text-white text-shadow-lg md:text-start md:text-7xl lg:text-9xl"
					>
						THIS IS AN ASTRO PLAYGROUND
					</h1>
				</div>
			</div>
		</section>
		<!-- <section class="lg:mt-28 md:mt-24 mt-20">
      <div class="px-5 max-w-[1400px] mx-auto">
        <h1
          class="lg:text-9xl md:text-7xl text-5xl text-start text-balance font-bold text-gray-800 lg:py-8 md:py-6 py-4 flex flex-col space-y-6 tracking-tight"
        >
          <span class="text-pink-200"> PINK </span>
          <span class="text-pink-300"> PINKER </span>
          <span class="text-pink-400"> PINKEST </span>
        </h1>
      </div>
    </section> -->

		<Pinkers />
		<AppleScrollArea />
		<section>
			{
				data.map((item: any) => (
					<div class="mx-auto max-w-[1400px] px-5">
						<h1 class="flex flex-col py-2 text-start text-2xl font-bold tracking-tight text-balance text-gray-800">
							{item.title}
						</h1>
					</div>
				))
			}
		</section>
		<!-- <BuyButton /> -->
	</main>
</Layout>
